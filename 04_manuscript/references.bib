	journaltitle = {{PLOS} Biology},
	shortjournal = {{PLOS} Biology},
	author = {Baldassarre, Laura and Reitzel, Adam M. and Fraune, Sebastian},
	urldate = {2023-01-28},
	date = {2023-01-23},
	langid = {english},
	note = {Publisher: Public Library of Science},
	keywords = {Bacteria, Geographical locations, Gut bacteria, Microbiome, Phylogeography, Population genetics, Salinity, Species diversity},
	file = {Full Text PDF:C\:\\Users\\Parker\\Zotero\\storage\\4IH3RPH2\\Baldassarre et al. - 2023 - Genotype–environment interactions determine microb.pdf:application/pdf},
}


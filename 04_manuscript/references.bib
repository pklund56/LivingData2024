
@article{ahmed_long-term_2019,
	title = {Long-Term Temperature Stress in the Coral Model Aiptasia Supports the “Anna Karenina Principle” for Bacterial Microbiomes},
	volume = {10},
	issn = {1664-302X},
	url = {https://www.frontiersin.org/articles/10.3389/fmicb.2019.00975/full},
	doi = {10.3389/fmicb.2019.00975},
	abstract = {The understanding of host-microbial partnerships has become a hot topic during the last decade; as it has been shown that associated microbiota play critical roles in the host physiological functions and susceptibility to diseases. Moreover, the microbiome may contribute to host resilience to environmental stressors. The sea anemone Aiptasia is a good laboratory model system to study corals and their microbial symbiosis. In this regard, studying its bacterial microbiota provides a better understanding of cnidarian metaorganisms as a whole. Here, we investigated the bacterial communities of different Aiptasia host-symbiont combinations under long-term heat stress under laboratory conditions. Following a 16S {rRNA} gene sequencing approach we were able to detect significant differences in the bacterial composition and structure of Aiptasia reared at different temperatures. A higher number of taxa (i.e., species richness) and consequently increased α-diversity and β-dispersion were observed in the microbiomes of heat-stressed individuals across all host strains and experimental batches. Our findings are in line with the recently proposed Anna Karenina principle ({AKP}) for animal microbiomes, which states that dysbiotic or stressed organisms have a more variable and unstable microbiota than healthy ones. Microbial interactions affect the fitness and survival of their hosts, thus exploring the {AKP} effect on animal microbiomes is important to understand host resilience. Our data contributes to the current knowledge of the Aiptasia holobiont and to the growing field of study of host-associated microbiomes.},
	pages = {975},
	journaltitle = {Frontiers in Microbiology},
	shortjournal = {Front. Microbiol.},
	author = {Ahmed, Hanin Ibrahim and Herrera, Marcela and Liew, Yi Jin and Aranda, Manuel},
	urldate = {2021-01-24},
	date = {2019},
	note = {Publisher: Frontiers},
	keywords = {16S {rRNA} gene, Dysbiosis, microbiome, richness, temperature, β-diversity},
	file = {Full Text PDF:C\:\\Users\\Parker\\Zotero\\storage\\A7GWPC6C\\Ahmed et al. - 2019 - Long-Term Temperature Stress in the Coral Model Ai.pdf:application/pdf},
